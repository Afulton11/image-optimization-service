{
  "compilerOptions": {
    "incremental": false,
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "types": ["node"],
    "paths": {
      "@infra/image-optimization/*": ["./image-optimization/*"],
      "@my/shared-image-optimization": ["../packages/shared-image-optimization/*"]
    }
  },
  "exclude": ["node_modules", "cdk.out"]
}
